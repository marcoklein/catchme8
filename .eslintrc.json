{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "error",
    "prefer-const": "error",
    "prefer-template": "error",
    "no-console": "warn"
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "ignorePatterns": ["dist/", "node_modules/", "client/js/", "server/", "tests/", "*.config.js"]
}